{% doc %}
  @prompt
    A heading with an animated glowing effect
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-glow-heading-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    text-align: {{ block.settings.alignment }};
  }

  .ai-glow-heading__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    display: inline-block;
    position: relative;
    font-weight: {{ block.settings.font_weight }};
    {% if block.settings.text_transform == 'uppercase' %}
      text-transform: uppercase;
    {% elsif block.settings.text_transform == 'lowercase' %}
      text-transform: lowercase;
    {% elsif block.settings.text_transform == 'capitalize' %}
      text-transform: capitalize;
    {% endif %}
  }

  @keyframes ai-glow-pulse-{{ ai_gen_id }} {
    0%, 100% {
      text-shadow: 
        0 0 {{ block.settings.glow_intensity }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_intensity | times: 2 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_intensity | times: 3 }}px {{ block.settings.glow_color }};
    }
    50% {
      text-shadow: 
        0 0 {{ block.settings.glow_intensity | times: 1.5 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_intensity | times: 3 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_intensity | times: 4.5 }}px {{ block.settings.glow_color }};
    }
  }

  .ai-glow-heading__text-{{ ai_gen_id }} {
    animation: ai-glow-pulse-{{ ai_gen_id }} {{ block.settings.animation_speed }}s ease-in-out infinite;
  }

  @media screen and (max-width: 749px) {
    .ai-glow-heading__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }
  }
{% endstyle %}

<glow-heading-{{ ai_gen_id }} class="ai-glow-heading-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-glow-heading__text-{{ ai_gen_id }}">
      {{ block.settings.heading }}
    </h2>
  {% else %}
    <h2 class="ai-glow-heading__text-{{ ai_gen_id }}">
      Add your heading text
    </h2>
  {% endif %}
</glow-heading-{{ ai_gen_id }}>

